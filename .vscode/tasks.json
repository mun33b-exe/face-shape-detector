{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Setup AI Face Detection System",
			"type": "shell",
			"command": "python",
			"args": [
				"setup.py"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Run Camera Mode",
			"type": "shell", 
			"command": "python",
			"args": ["main.py", "--mode", "camera"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated"
			},
			"problemMatcher": []
		},
		{
			"label": "Install Dependencies",
			"type": "shell",
			"command": "pip", 
			"args": ["install", "-r", "requirements.txt"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Test Face Detection",
			"type": "shell",
			"command": "python",
			"args": ["src/face_detection.py"],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always", 
				"focus": true,
				"panel": "dedicated"
			},
			"problemMatcher": []
		}
	]
}